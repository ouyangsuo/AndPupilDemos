<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lvmain_item_height"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:id="@+id/tvNum"
            style="@style/lvItemNumTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="9"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/lvmain_item_height_top"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="hello"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/lvmain_item_height_bottom"
            android:gravity="top"
            android:paddingLeft="15dp"
            android:paddingTop="0dp"
            android:text="hellohellohellohellohellohellohellohello"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>